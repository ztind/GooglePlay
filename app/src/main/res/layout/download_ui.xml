<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/down_select"
        android:text="收藏"
        android:textColor="#fff"
        android:background="@drawable/detail_btn_normal"
        android:layout_width="wrap_content"
        android:layout_margin="2dp"
        android:layout_height="46dp" />
    <Button
        android:id="@+id/down_downbut"
        android:text="下载"
        android:textColor="#fff"
        android:background="@drawable/progress_btn_normal"
        android:layout_toRightOf="@+id/down_select"
        android:layout_toLeftOf="@+id/down_share"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_margin="2dp"
        android:layout_height="46dp" />
    <Button
        android:id="@+id/down_share"
        android:text="分享"
        android:textColor="#fff"
        android:background="@drawable/detail_btn_normal"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="46dp" />

    <FrameLayout
        android:id="@+id/fl_progress"
        android:background="@drawable/progress_bg"
        android:layout_toRightOf="@+id/down_select"
        android:layout_toLeftOf="@+id/down_share"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_margin="2dp"
        android:layout_height="46dp" />


</RelativeLayout>